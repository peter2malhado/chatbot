<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="chatbot.chatpage"
             BackgroundColor="#1E1E1E"
             Padding="10">

    <Grid RowDefinitions="*,Auto">

        <!-- Lista de mensagens -->
        <CollectionView x:Name="MessagesView"
                        Grid.Row="0"
                        ItemsSource="{Binding Messages}"
                        VerticalOptions="FillAndExpand"
                        BackgroundColor="Transparent"
                        Margin="0,0,0,10">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical" ItemSpacing="10"/>
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="0,5">
                        <Frame CornerRadius="15"
                               Padding="12"
                               HasShadow="False"
                               BackgroundColor="{Binding IsUser, Converter={StaticResource MessageColorConverter}}"
                               HorizontalOptions="{Binding IsUser, Converter={StaticResource MessageAlignmentConverter}}"
                               MaximumWidthRequest="280">
                            <Label Text="{Binding Text}"
                                   TextColor="White"
                                   FontSize="16"
                                   LineBreakMode="WordWrap"/>
                        </Frame>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Área de input -->
        <Grid Grid.Row="1"
              ColumnDefinitions="*,Auto"
              Padding="10"
              BackgroundColor="#2C2C2C"
            >

            <Entry x:Name="MessageEntry"
                   Placeholder="Escreve a tua mensagem..."
                   Text="{Binding CurrentMessage, Mode=TwoWay}"
                   FontSize="16"
                   TextColor="White"
                   PlaceholderColor="#888"
                   BackgroundColor="Transparent"
                   VerticalOptions="Center"
                   Margin="10,0"
                   Completed="MessageEntry_Completed"/>

            <Button Grid.Column="1"
                    Text="➤"
                    FontSize="20"
                    TextColor="White"
                    BackgroundColor="#10A37F"
                    WidthRequest="50"
                    HeightRequest="50"
                    CornerRadius="25"
                    Command="{Binding SendMessageCommand}"
                    VerticalOptions="Center"/>
        </Grid>
    </Grid>
</ContentPage>
